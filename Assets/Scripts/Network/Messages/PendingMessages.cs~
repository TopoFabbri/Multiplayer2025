using System.Collections.Generic;
using NUnit.Framework;

namespace Network.Messages
{
    public class PendingMessages
    {
        private List<(float time, byte[] message)> pendingMessages = new();
        
        public void Add(byte[] message) => pendingMessages.Add((0f, message));

        public void CheckMessages(float time, float timeout)
        {
            List<int> indexesToRemove = new();
            
            for (int i = 0; i < pendingMessages.Count; i++)
            {
                pendingMessages[i] = (pendingMessages[i].time + time, pendingMessages[i].message);
            }
        }
    }
}